# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
# Home page
GET     /                           controllers.Application.index()
GET     /inicio                     controllers.Application.login()
POST    /login                      controllers.Application.authenticate()
GET     /logout                     controllers.Application.logout()
GET     /cursos                     controllers.Cursos.index()

GET     /curso/:curso/Asignaturas      controllers.Asignaturas.index(curso: Long)
GET     /:asignatura/Unidad            controllers.Unidades.index(asignatura: Long, nombreAsignatura: String)
GET     /Alumnos                       controllers.Alumnos.index(idCurso: Long)
GET     /Pregunta                      controllers.Preguntas.index(idUnidad: Long)
GET     /filtroPreguntas               controllers.Preguntas.filtroPreguntas()
GET     /profesor                      controllers.Profesores.index()
GET     /ajaxWithError                 controllers.Application.ajaxWithError()
POST    /preguntas                     controllers.Preguntas.addPregunta()
GET     /preguntas                     controllers.Preguntas.formBlank()
#GET     /pruebas                      controllers.Pruebas.index()
POST    /pruebas                       controllers.Pruebas.crearPrueba()
GET     /CDocente                      controllers.CoordinadorDocente.home()
GET     /coordinador                   controllers.Coordinadores.home()
#GET     /jsonTest                     controllers.Pruebas.generateReport()
GET     /prueba/:idPrueba              controllers.Pruebas.getPrueba(idPrueba: Long)
GET     /pruebas/:idCurso              controllers.Pruebas.getPruebas(idCurso: Long)
GET     /pdf/:idPrueba                 controllers.GenerarReportes.index(idPrueba: Long)
GET     /categorias                    controllers.JerarquiaTipoPreguntas.gerarquia()
#Ruta Javascript 
GET      /assets/javascripts/routes  controllers.Application.javascriptRoutes()
GET      /cursojson                     controllers.Cursos.geCursosXprefesorJson(idTipo: Long)
GET      /filtro                     controllers.AsignaturaSecciones.getFiltros(idTipo: String)
GET      /tipoFiltros				 controllers.AsignaturaSecciones.getTipoFiltros()			
GET      /unidades                   controllers.Preguntas.getUnidades(idAsignaturas: String)
POST     /habilidades                controllers.Preguntas.getHabilidades(idAsignaturas: String)
GET      /pregu                      controllers.Preguntas.getPreguntas(idUnidades: String)
GET      /pregxcat                   controllers.Preguntas.getPreguntasxCategorias(idAsignaturaL: Long,idCursoL: Long, idJerarquiaL: Long)
GET      /categorias                 controllers.Categorias.getCategorias(idCurso: String,idCategoriaSup: String, idAsignatura: String,idJerarquia:String)
GET      /jerarquia                  controllers.Categorias.getJerarquia(idTipo: String, idAsignatura: String, idCurso: String)
GET      /jerarFiltro                controllers.Categorias.getJerarquiaFiltro(idTipo: String, idAsignatura: String, idCurso: String)
POST     /filtr                      controllers.Preguntas.getPreguntasfiltradas()
POST     /alternativas               controllers.Alternativas.getAlternativas()
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
